@model ForgotPasswordModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Solution RFID - Login</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=no" />
    <meta name="theme-color" content="#ffffff" />
    <link rel="apple-touch-icon" sizes="180x180" href="apple-touch-icon.png" />
    <link rel="icon" type="image/png" href="img/ico32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="img/ico16.png" sizes="16x16" />
    <link rel="shortcut icon" href="~/logo/logo.png" type="image/vnd.microsoft.icon">
    <link href="~/js/font.css" rel="stylesheet" />
    <link href="~/assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/style.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/css/login.css" rel="stylesheet" type="text/css" />
    <link href="~/css/login-slider.css" rel="stylesheet" type="text/css" />
    <link href="~/css/amonsis.css" rel="stylesheet" type="text/css" />
    <link href="~/css/vendor.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,400italic,500,700" />
    <style type="text/css">
        .ozet-yazi {
            padding: 40px;
            letter-spacing: 1px;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="login">
            <div class="login-body">
                <a class="login-brand" href="#">
                    <img class="img-responsive" src="~/logo/logo.png" alt="Logo" />
                </a>
                <div class="login-form">
                    <form method="post" asp-action="ForgotPassword" id="form1" data-toggle="novalidate">
                        <h3 class="text-center m-b-lg">Log In</h3>
                        <div class="form-group mb-10">
                            <label asp-for="Email" class="form-label fw-bolder text-dark fs-6 mb-0"></label>
                            <input asp-for="Email" type="text" class="form-control required" type="email" spellcheck="false" autocomplete="off" data-msg-required="Please Enter Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <span aria-hidden="true"></span><a href="#" class="pull-right"></a>
                        </div>

                        <div class="text-center">
                            <button type="submit" id="kt_sign_in_submit" class="btn btn-lg btn-primary w-100 mb-5">
                                <span class="indicator-label">Send Mail</span>
                                <span class="indicator-progress">
                                    Please Wait
                                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                </span>
                            </button>
                        </div>
                    </form>
                    <div class="row button-container">
                        <div class="col-md-12 mb-5 order-1 order-md-2">
                            <a asp-action="Login" class="btn btn-secondary w-100">
                                <i class="fas fa-arrow-left"></i>
                                Back
                            </a>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }
                </div>
                <a href="https://solutionrfid.com/" class="text-center">Solution RFID &copy @DateTime.Now.Year</a>
            </div>
        </div>
        <div class="right-side">
            <div class="ozet-yazi">
                <h4>We record Textile Logistics with our LojiTeks Project.</h4>
                <ul>
                    <li>Before sending your shipments to customers using RFID, you can see and check all the details such as color, size, model, quantity of the products inside the parcel in seconds without opening the parcel covers.</li>
                    <li>We report your customer base shipments, how many parcels/hangers and how many products in the boxes in the shipment, along with the ID number of the customer labels.</li>
                    <li>By reporting these details, we help you avoid human errors in logistics operations and thus prevent advertisements.</li>
                </ul>
            </div>

            <div class="partners-side">
                <section class="logos-slider slider">
                    <div class="slide"><img src="~/logo/firm_logo/logo_1.jpg" alt="#" /></div>
                    <div class="slide"><img src="~/logo/firm_logo/logo_2.jpg" alt="#" /></div>
                    <div class="slide"><img src="~/logo/firm_logo/logo_3.jpg" alt="#" /></div>
                    <div class="slide"><img src="~/logo/firm_logo/logo_4.jpg" alt="#" /></div>
                    <div class="slide"><img src="~/logo/firm_logo/logo_5.jpg" alt="#" /></div>
                    <div class="slide"><img src="~/logo/firm_logo/logo_6.jpg" alt="#" /></div>
                    <div class="slide"><img src="~/logo/firm_logo/logo_7.jpg" alt="#" /></div>
                    <div class="slide"><img src="~/logo/firm_logo/logo_8.jpg" alt="#" /></div>
                    <div class="slide"><img src="~/logo/firm_logo/logo_9.jpg" alt="#" /></div>
                    <div class="slide"><img src="~/logo/firm_logo/logo_10.jpg" alt="#" /></div>
                    <div class="slide"><img src="~/logo/firm_logo/logo_11.jpg" alt="#" /></div>
                    <div class="slide"><img src="~/logo/firm_logo/logo_12.jpg" alt="#" /></div>
                    <div class="slide"><img src="~/logo/firm_logo/logo_13.jpg" alt="#" /></div>
                </section>
            </div>
        </div>
    </div>

    <script src="~/js/vendor.min.js" type="text/javascript"></script>
    <script src="~/js/amonsis.min.js" type="text/javascript"></script>

    <!-- slider -->
    <script src="~/js/slick.js" type="text/javascript"></script>
    <script src="~/js/login-slider.js" type="text/javascript"></script>
</body>
</html>